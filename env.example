# Hyperliquid Trading Bot Environment Variables
# Copy this file to .env and fill in your values

# Hyperliquid API Configuration
HYPERLIQUID_API_KEY=your_api_key_here
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HYPERLIQUID_TESTNET=true

# Optional: Override default configuration file
# HYPERLIQUID_CONFIG_PATH=config/production.toml

# Optional: Override logging level
# HYPERLIQUID_LOGGING_LEVEL=debug

# Optional: Override trading settings
# HYPERLIQUID_TRADING_DRY_RUN=false
# HYPERLIQUID_TRADING_MAX_POSITIONS=20

# Optional: Override risk management
# HYPERLIQUID_RISK_MANAGEMENT_MAX_DAILY_LOSS=2000.0
# HYPERLIQUID_RISK_MANAGEMENT_MAX_POSITION_SIZE=20000.0
